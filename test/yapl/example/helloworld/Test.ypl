class Animal {
    fun say = println("Not implemented")
}

class Cow : Animal() {
    fun say = println("Moo")
}

class Cat : Animal() {
    fun say = println("Meow")
}

fun sayOn(animal: Animal) = animal->say()

fun main() {
    val cow = Cow()
    val cat = Cat()

    sayOn(cow)
    sayOn(cat)
}
